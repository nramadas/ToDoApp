<!DOCTYPE html>
<html>
<head>
  <title>.do</title>
  <link href='http://fonts.googleapis.com/css?family=Antic+Slab|Almendra+Display|Julius+Sans+One|Text+Me+One' rel='stylesheet' type='text/css'>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="main">

  <% if current_user %>
    <div class="profile">
      <%= link_to 'http://gravatar.com/emails' do %>
        <div class="profile_pic_stub">
          Edit profile picture
        </div>
        <div class="profile_pic">
          <%= gravatar_for current_user %>
        </div>
      <% end %>
      <br>
      <h1><%= current_user.name %></h1>

      <div class="count">
        <%= current_user.completed_task_count %>
      </div>
      <div class="pre_count">
        Tasks completed:
      </div>
      <div class="clear_floats"></div>

      <div class="count">
        <%= current_user.tasks.length %>
      </div>
      <div class="pre_count">
        Tasks remaining:
      </div>
      <div class="clear_floats"></div>
      <span class="logout1">
        <%= link_to 'Logout', session_path(current_user), method: :delete %>
      </span>
      <span class="logout2">
        <%= link_to 'Logout', session_path(current_user), method: :delete %>
      </span>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= yield %>

</div>
<div class="footer"></div>

</body>
</html>
